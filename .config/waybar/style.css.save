/* Reset all styles */
* {
	border: @white;
/*	border-radius: 3px; */
	min-height: 18px;
/*	margin-top: 1px;	*/
/*	margin-bottom: 1px;	*/
	margin-left: 2px;
	margin-right: 2px;
	padding: 0px; 
	box-shadow: @black;
	text-shadow: @black;
	-gtk-icon-shadow: @black;
}

/* The whole bar */
#waybar {
	background: rgba(20, 20, 20, 0.85);
	color: @white;
/*	font-family: Iosevka; */
	font-family: Segoe-UI-Variable;
	font-size: 10pt;
	font-weight: bold;
}

/* Each module */
#battery,
#clock,
#date,
#cpu,
#language,
#memory,
#mode,
#network,
#pulseaudio,
#temperature,
#tray,
tooltip {
	background: rgba(20, 20, 20, 0.85);
}
tooltip label {
	color: white;
}
#backlight,
#idle_inhibitor,
#disk,
#user,
#mpris {
	padding-left: 6pt;
	padding-right: 6pt;
}

/* Each critical module */
#mode,
#memory.critical,
#cpu.critical,
#temperature.critical,
#battery.critical.discharging {
	animation-timing-function: linear;
	animation-iteration-count: infinite;
	animation-direction: alternate;
	animation-name: blink-critical;
	animation-duration: 1s;
}

/* Each warning */
#network.disconnected,
#memory.warning,
#cpu.warning,
#temperature.warning,
#battery.warning.discharging {
	color: @warning;
}

#mode {
	color: @white;
	background: @mode;
}

/* Workspaces stuff */
#workspaces button {
	font-weight: bold;
	padding-left: 2pt;
	padding-right: 2pt;
	color: @white;
	background: transparent;
}

/* Inactive (on unfocused output) */
#workspaces button.visible {
	color: @white;
	background: transparent;
}

/* Active (on focused output) */
#workspaces button.active {
	color: @white;
	background: @winhighlight;
}

/* Contains an urgent window */
#workspaces button.urgent {
	color: @black;
	background: @warning;
}

/* Style when cursor is on the button */
#workspaces button:hover {
	background: @winbluedimmer;
	color: @white;
}

